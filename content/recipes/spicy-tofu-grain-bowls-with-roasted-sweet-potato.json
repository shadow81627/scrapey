  "recipeIngredient": [
    "2 medium sweet potatoes",
    "salt and pepper",
    "1 tbsp extra virgin olive oil",
    "12 ounces firm tofu",
    "1/4 cup light soy sauce",
    "2 Tbsp Sriracha",
    "1 tsp toasted sesame oil",
    "1 tsp honey (or other liquid sweetener)",
    "1/4 cup water",
    "1/3 cup extra virgin olive oil",
    "3 tablespoons balsamic vinegar",
    "2 tsp Dijon mustard",
    "salt and pepper (to taste)",
    "1 cup wild rice",
    "1 bunch Lacinato kale (de-stemmed and sliced into ribbons)",
    "1 apple (cored and diced)",
    "3 ounces sharp cheese (crumbled )"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Heat the oven to 400°F (200°C) and line a large baking sheet with parchment paper."
    },
    {
      "@type": "HowToStep",
      "text": "Peel and dice the sweet potatoes into 2cm cubes. Toss with olive oil and season with salt and pepper."
    },
    {
      "@type": "HowToStep",
      "text": "Arrange the sweet potatoes into a single layer on the baking sheet, and roast for 20-30 minutes, until slightly browned and fork-tender."
    },
    {
      "@type": "HowToStep",
      "text": "Remove from the oven and set aside to cool slightly."
    }
  ],
