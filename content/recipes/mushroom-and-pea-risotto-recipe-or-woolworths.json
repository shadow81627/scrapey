  "recipeIngredient": [
    "200g risotto rice, wash and drain",
    "1 tbs canola oil",
    "200g mixed mushrooms, washed and sliced",
    "100g peas",
    "1 medium white onion, peeled and diced",
    "3 cloves garlic, peeled and diced",
    "3.2 cups vegetable stock",
    "0.4 cup white wine",
    "80g vegan parmesan, grated"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Heat up a large pot to a medium heat with the canola oil and fry the sliced mushrooms for 3 minutes while tossing."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Remove the mushrooms from the pot and set to one side."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add the diced onion and garlic to pot and fry for 2 minutes while tossing."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add the risotto rice to the pot and fry for 3 minute and then add the wine."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add half of the stock to the pot and allow to cook until it has absorbed."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add the rest of the stock to the pot and continue stirring occasionally."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Once the stock has reduced enough, add the peas and mushrooms and cook for a further 2 minutes until vegetables are tender."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Garnish with vegan parmesan."
    }
  ],
