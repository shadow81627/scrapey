  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Place rice in a fine-mesh strainer below the faucet in your sink."
    },
    {
      "@type": "HowToStep",
      "text": "Run cool water through the strainer, shaking it lightly or agitating the rice with your fingertips to make sure each piece is washed."
    },
    {
      "@type": "HowToStep",
      "text": "When water runs clear, turn off the faucet and prepare to cook your rice."
    }
