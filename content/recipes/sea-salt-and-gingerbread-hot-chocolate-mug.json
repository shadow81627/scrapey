  "recipeIngredient": [
    "3 cups unsweetened non dairy milk",
    "1 Chai tea bag",
    "1- 2.75 oz bar Salazon Sea Salt & Gingerbread Chocolate, cut into pieces",
    "3 - 4 tbsp unsweetened cocoa powder (to taste)",
    "1 - 2 tbsp sugar (or to taste)",
    "Coconut whipped topping"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Combine the milk and the tea bag in a medium sauce pan. Bring to a simmer and keep it there for 10 minutes"
    },
    {
      "@type": "HowToStep",
      "text": "Turn off the heat and remove the tea bag. Add the chocolate pieces and whisk until they are completely melted. Whisk in the cocoa powder and sugar and mix well"
    },
    {
      "@type": "HowToStep",
      "text": "Serve hot with a dollop of whipped topping"
    }
  ],
