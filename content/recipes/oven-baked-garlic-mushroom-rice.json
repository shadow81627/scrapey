  "recipeIngredient": [
    "400g / 2 cups long grain white rice (*)",
    "840mls / 3 1/2 cups flavourful broth",
    "1 medium onion (chopped finely)",
    "5 - 10 cloves garlic (, chopped finely **)",
    "1 1/2 teaspoons salt",
    "3/4 teaspoon ground pepper",
    "1 teaspoon dried thyme (***)",
    "1 teaspoon dried rosemary (***)",
    "550g / around 6 heaping cups sliced mushrooms"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat oven to 380*F"
    },
    {
      "@type": "HowToStep",
      "text": "Rinse the rice then place it in a large ceramic baking dish. Mine measures 13 x 9 inches****."
    },
    {
      "@type": "HowToStep",
      "text": "Add the onions and garlic then the seasoning and herbs. Stir together to evenly distribute then level out."
    },
    {
      "@type": "HowToStep",
      "text": "Spread the chopped mushrooms evenly over the top."
    },
    {
      "@type": "HowToStep",
      "text": "Pour over the broth then cover tightly with tin foil or a tight fitting lid."
    },
    {
      "@type": "HowToStep",
      "text": "Baked for 45 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Remove from the oven, remove the foil, check the rice is tender. If not give it a stir, cover and return to the oven for another 10 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Once rice is tender remove from the oven. If there is any visible liquid uncover and return to the oven for about 5 minutes and it will evaporate off."
    },
    {
      "@type": "HowToStep",
      "text": "Serve immediately."
    }
  ],
