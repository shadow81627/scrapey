  "recipeIngredient": [
    "1 Portobello mushroom (, see note)",
    "2 tablespoons maple syrup",
    "1 tablespoon liquid smoke",
    "1-1 1/2 teaspoons sea salt (, start with 1 and taste to see if you want more)",
    "1 teaspoon garlic powder",
    "1 teaspoon onion powder",
    "1/2 teaspoon ground black pepper"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat the oven to 350 F/ 175 C"
    },
    {
      "@type": "HowToStep",
      "text": "Slice the mushroom into thin slices, no thicker than 1/4 inch thick, and place them on a plate or wide container."
    },
    {
      "@type": "HowToStep",
      "text": "Mix the rest of the ingredients in a bowl."
    },
    {
      "@type": "HowToStep",
      "text": "Coat the mushroom slices with the mixture on both sides."
    },
    {
      "@type": "HowToStep",
      "text": "Lay them out on a parchment lined baking sheet."
    },
    {
      "@type": "HowToStep",
      "text": "Bake for 15 minutes. Flip the slices over. Bake for another 10-20 minutes, depending on how crispy you want them. Make sure to start checking them every 5 minutes after flipping as cook time will vary by oven and how thick the slices are."
    },
    {
      "@type": "HowToStep",
      "text": "Serve in everything!"
    }
  ],
