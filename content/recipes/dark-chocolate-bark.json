  "recipeIngredient": [
    "16 oz dark chocolate (I use 55-70%)",
    "1/4 cup goji berries",
    "1/2 cup shelled pistachios",
    "1/2 tsp vanilla salt"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Line a cookie sheet with parchment paper."
    },
    {
      "@type": "HowToStep",
      "text": "Break the chocolate into pieces and place in a microwave-proof bowl."
    },
    {
      "@type": "HowToStep",
      "text": "Microwave in 30 second bursts, stirring the chocolate and letting it rest between each interval. This allows the chocolate to melt slowly and not overheat."
    },
    {
      "@type": "HowToStep",
      "text": "Pour the melted chocolate onto the prepared baking sheet."
    },
    {
      "@type": "HowToStep",
      "text": "Scatter with pistachios and goji berries."
    },
    {
      "@type": "HowToStep",
      "text": "Allow the chocolate bark to rest until firm."
    },
    {
      "@type": "HowToStep",
      "text": "Break into pieces and enjoy!"
    }
  ],
