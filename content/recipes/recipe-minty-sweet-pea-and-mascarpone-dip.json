  "recipeCuisine": [],
  "recipeIngredient": [
    "2 cups fresh peas, shelled (or frozen peas, defrosted)",
    "1 clove garlic, minced",
    "1/2 lemon, zested and juiced",
    "1/4 cup mint leaves, finely chopped",
    "1/2 cup mascarpone cheese",
    "Salt and pepper",
    "Fresh vegetables, pita bread, or crackers to serve"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "If using fresh peas, add to a pot of salted boiling water, and cook for about 3 to 5 minutes, until tender. Drain the water and cool the peas completely."
    },
    {
      "@type": "HowToStep",
      "text": "Add peas, garlic, lemon zest and juice, and mint to the bowl of a food processor, and process until smooth. Stir in the mascarpone and season to taste with salt and pepper."
    },
    {
      "@type": "HowToStep",
      "text": "Serve with your favorite fresh vegetables, pita bread, or crackers."
    }
  ],
