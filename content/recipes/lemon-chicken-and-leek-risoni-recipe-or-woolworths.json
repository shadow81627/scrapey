  "recipeIngredient": [
    "2 cloves garlic, peeled and minced",
    "1 tbs olive oil",
    "1 medium leek, finely sliced",
    "300g risoni pasta",
    "1 pinch saffron",
    "2.8 cups chicken stock, hot",
    "150g peas, frozen",
    "300g cooked chicken, shredded",
    "40g parmesan, grated",
    "1 medium lemon, juice and zest",
    "1 pinch cracked black pepper"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "In a large, deep frying pan, heat the oil and cook the leeks and garlic over a medium heat for 23 minutes to soften."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Stir in the risoni, saffron and chicken stock, bring to the boil and simmer for 4 minutes."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add the peas, half the lemon juice and zest and simmer for another 2 minutes or until the risoni is tender and has absorbed all the stock."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Stir in the shredded chicken and grated parmesan, season with cracked black pepper, more lemon juice to taste and serve."
    }
  ],
