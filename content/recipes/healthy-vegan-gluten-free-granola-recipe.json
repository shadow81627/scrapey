  "recipeIngredient": [
    "1/2 cup maple syrup",
    "1/2 cup almond butter (see note)",
    "1 teaspoon vanilla extract",
    "1/4 - 1/2 teaspoon sea salt",
    "2 cups oats (, gluten-free if needed)",
    "1-3 teaspoon cinnamon (, optional)",
    "1/2 cup sliced almonds (, optional)",
    "1/2 cup chopped pecans (, optional)",
    "1/2 cup sunflower seeds (, optional)",
    "1/4 - 1/2 cup dried fruit (, like blueberries cherries or pineapple)",
    "1/4 - 1/2 cup shredded coconut"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat oven to 350 F/ 175 C."
    },
    {
      "@type": "HowToStep",
      "text": "Put the maple syrup, almond butter, vanilla, salt and cinnamon (if using) into a bowl and whisk until smooth."
    },
    {
      "@type": "HowToStep",
      "text": "Add in the oats, nuts and seeds and toss to coat well."
    },
    {
      "@type": "HowToStep",
      "text": "Spread onto a parchment lined baking sheet."
    },
    {
      "@type": "HowToStep",
      "text": "Bake for 20-25 minutes until golden brown. Allow to cool for 10-15 minutes so it hardens."
    },
    {
      "@type": "HowToStep",
      "text": "Break apart and use as preferred!"
    }
  ],
