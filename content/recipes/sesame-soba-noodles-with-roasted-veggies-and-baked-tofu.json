  "recipeIngredient": [
    "1 (14 ounce) package extra firm tofu, (drained and pressed)",
    "1/4 cup soy sauce or tamari",
    "2 tablespoons rice vinegar",
    "2 tablespoons maple syrup",
    "2 teaspoons fresh grated ginger",
    "1 garlic clove, (minced)",
    "2 teaspoons sriracha (or to taste)",
    "1 teaspoon toasted sesame oil",
    "4 cups veggies of choice (see note), (cut into bite sized pieces)",
    "1 tablespoon canola oil (or another high-heat oil)",
    "Salt and pepper to taste",
    "8 ounces dried soba noodles",
    "3 tablespoons soy sauce or tamari",
    "1 tablespoon rice vinegar",
    "2 garlic cloves, (minced)",
    "Chopped scallions",
    "Toasted sesame seeds"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Cut the tofu into 1-inch cubes."
    },
    {
      "@type": "HowToStep",
      "text": "In a shallow bowl, stir the soy sauce, vinegar, maple syrup, ginger, garlic, sriracha and sesame oil together."
    },
    {
      "@type": "HowToStep",
      "text": "Add the tofu to the bowl and gently stir to coat. Allow to marinate for at least 30 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Preheat the oven to 400Â° and line a baking sheet with parchment paper."
    },
    {
      "@type": "HowToStep",
      "text": "Arrange the tofu cubes on the baking sheet and place it in the oven."
    },
    {
      "@type": "HowToStep",
      "text": "Bake the tofu for about 15 minutes, flip and then bake about 15 minutes more, until the pieces firm up and darken."
    }
  ],
