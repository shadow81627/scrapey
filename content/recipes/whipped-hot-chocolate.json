  "recipeIngredient": [
    "3/4 cup cold heavy cream",
    "3 tablespoons Dutch process or natural cocoa powder, plus more for dusting",
    "1/4 cup powdered sugar",
    "1/8 teaspoon kosher salt",
    "2 cups whole milk",
    "1/2 teaspoon vanilla extract",
    "Marshmallows, for serving"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Place 3/4 cup cold heavy cream, 3 tablespoons cocoa powder, 1/4 cup powdered sugar and 1/8 teaspoon kosher salt into a large bowl. Whisk with an electric hand mixer or a sturdy whisk until soft peaks form, 2 to 7 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Place 2 cups whole milk and 1/2 teaspoon vanilla extract in a small saucepan. Bring to a simmer over medium heat, stirring frequently. Pour the milk into 2 mugs. Top with the whipped chocolate, dust with cocoa powder, and serve immediately with marshmallows."
    }
  ],
