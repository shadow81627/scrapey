  "recipeCuisine": [],
  "recipeIngredient": [
    "2 tablespoons white balsamic vinegar",
    "1 teaspoon Dijon mustard",
    "1/2 teaspoon honey",
    "4 tablespoons olive oil",
    "Salt and pepper",
    "4 large handfuls arugula (about 12 ounces)",
    "1 barely ripe pear, cored and sliced thin",
    "3 ounces soft blue cheese"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Whisk together the balsamic vinegar, mustard, and honey in a small saucepan over low heat. Gradually pour in the olive oil, and continue whisking until the dressing has emulsified. Season with salt and pepper."
    },
    {
      "@type": "HowToStep",
      "text": "Divide the arugula between plates. Top with the sliced pear and blue cheese, then drizzle with warm vinaigrette."
    }
  ],
