  "recipeIngredient": [
    "4 cups water",
    "1 teaspoon garlic powder",
    "1 teaspoon gochugaru",
    "1 teaspoon MSG or dashi powder",
    "2 cups kimchi, ideally extra fermented. You can buy some and leave on your kitchen counter at room temperature for a few days to achieve this ideal fermentation level.",
    "1/2 cup bunashimeji mushrooms",
    "1 cup rice cake slices or half pack of instant ramen",
    "1 cup bacon, Spam, or any other salty protein"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Boil water."
    },
    {
      "@type": "HowToStep",
      "text": "Lower the heat and add MSG, garlic powder, and gochugaru to water. Stir stock and simmer until all powder is dissolved."
    },
    {
      "@type": "HowToStep",
      "text": "Add kimchi — including brine — and mushrooms to pot, and keep stirring until vegetables are soft."
    },
    {
      "@type": "HowToStep",
      "text": "Add bacon and let simmer until meat is fully cooked."
    },
    {
      "@type": "HowToStep",
      "text": "Add rice cake slices and cook until al dente."
    },
    {
      "@type": "HowToStep",
      "text": "Serve with rice and side dishes (banchan) or on its own."
    }
  ],
