  "name": "Lemon Ginger Basmati Rice",
  "prepTime": "PT5M",
  "recipeCategory": "Side Dish",
  "recipeCuisine": "American",
  "recipeIngredient": [
    "2 cups water",
    "juice of 1 lemon",
    "zest of 1 lemon",
    "2 tsp. vegetable oil",
    "1 tsp. fresh grated ginger",
    "1 tsp. turmeric",
    "1 tsp. black mustard seeds (optional)",
    "1/2 tsp. salt",
    "1 cup basmati rice"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Place all ingredients except rice into medium saucepan. Bring to a boil."
    },
    {
      "@type": "HowToStep",
      "text": "Add rice and bring back to a simmer. Stir and cover."
    },
    {
      "@type": "HowToStep",
      "text": "Allow to cook, covered, for 20 minutes, until all liquid is absorbed."
    },
    {
      "@type": "HowToStep",
      "text": "Remove from heat and allow to sit another 5 minutes, covered, before serving."
    }
  ],
