  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Cook pasta following directions on package."
    },
    {
      "@type": "HowToStep",
      "text": "Add frozen peas to the bottom of a pasta strainer."
    },
    {
      "@type": "HowToStep",
      "text": "When pasta is done, pour the hot pasta water and paste over the frozen peas in the strainer (reserve a little pasta water to thin out if necessary)."
    },
    {
      "@type": "HowToStep",
      "text": "Put the pasta and peas back in the pot."
    },
    {
      "@type": "HowToStep",
      "text": "Add 1 cup Alfredo sauce (or cheese or both) to pot and mix well."
    },
    {
      "@type": "HowToStep",
      "text": "Add a drizzle of pasta water to thin out if needed."
    },
    {
      "@type": "HowToStep",
      "text": "Add Parmesan, if using, and any other add ins and serve!"
