  "recipeIngredient": [
    "50g unsalted butter",
    "1 pinch salt",
    "1 pinch cracked black pepper",
    "50g plain flour",
    "1.2 cup milk",
    "2 tbs cream"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Heat up the butter on a saucepan until it has melted fully then add flour to make a roux, stirring about 12 minutes until thickened."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Now add the seasoning and milk and stir for 5 minutes until the sauce thickens. Finish with 30mls cream."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "The sauce is ready to serve from the heat."
    }
  ],
