  "recipeIngredient": [
    "2 cups unflavored and unsweetened non-dairy milk",
    "1/3 cup vegan chocolate chips",
    "1 1/2 teaspoons maple syrup (or to taste)",
    "1/2 teaspoon ground cinnamon (optional)",
    "Pinch cayenne pepper (or to taste (optional)",
    "Pinch salt",
    "1 teaspoon vanilla extract",
    "Vegan marshmallows or whipped topping, (optional)"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Place the milk, chocolate chips, maple syrup, cinnamon, cayenne pepper, and salt into a small saucepan and set it over medium heat."
    },
    {
      "@type": "HowToStep",
      "text": "Heat the mixture, whisking constantly, until it's hot and the chips are completely melted."
    },
    {
      "@type": "HowToStep",
      "text": "Remove the pot from heat and stir in the vanilla."
    },
    {
      "@type": "HowToStep",
      "text": "Divide into mugs and top with vegan marshmallows or whipped topping."
    },
    {
      "@type": "HowToStep",
      "text": "Serve."
    }
  ],
