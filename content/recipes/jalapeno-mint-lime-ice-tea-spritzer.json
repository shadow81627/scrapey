  "recipeIngredient": [
    "1 bunch mint leaves",
    "1 large jalapeño, sliced",
    "4 cups boiling water",
    "1/4 cup agave nectar (or to taste)",
    "1/4 cup +2 tbsp lime juice (or to taste)",
    "1 quart sparkling water",
    "Garnishl: jalapeno, mint leaves and lime (optional)"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Combine the mint leaves, jalapeño and boiling water in a large pitcher. Cover and let it steep for 20-25 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Strain into another pitcher and add agave and lime juice. Stir well and chill in the fridge for a couple of hours"
    },
    {
      "@type": "HowToStep",
      "text": "Right before serving, add ice to a glass, fill half way with iced tea and half way with sparkling water. Garnish with slices of lime, fresh jalapeño and mint leaves."
    }
  ],
