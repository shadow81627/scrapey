  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Cut tofu into 1/2 inch cubes (or desired shape)."
    },
    {
      "@type": "HowToStep",
      "text": "Coat a large, flat-bottomed skillet with oil and place it over medium heat. When the oil is hot, add the tofu cubes in a single layer."
    },
    {
      "@type": "HowToStep",
      "text": "Cook the tofu for about 10 minutes, flipping once or twice to achieve browning on multiple sides."
    },
    {
      "@type": "HowToStep",
      "text": "Pour the hoisin sauce over the tofu and flip a few times to coat. Cook another minute or two, until the sauce thickens up just a bit."
    },
    {
      "@type": "HowToStep",
      "text": "Remove the tofu from heat and transfer it to a plate."
    }
  ],
