  "recipeIngredient": [
    "2 pounds Yukon gold potatoes",
    "1 cup chopped yellow or sweet onion",
    "4 cloves garlic (, chopped)",
    "2 teaspoons fresh thyme",
    "1/4 teaspoon sea salt",
    "Drizzle of oil (, or broth if you are oil-free, to sauté with)",
    "1/4 cup Vegan Parmesan Cheese (, optional (can use more)",
    "Extra thyme to sprinkle on top (, optional)",
    "2 1/4 cups veggie broth (, low sodium if needed)",
    "1 1/2 cup raw cashews (, see note)",
    "3/4 cup cooked potato",
    "3/4 cup cooked white beans",
    "1 1/2 teaspoon apple cider vinegar",
    "1 1/2 teaspoon sea salt",
    "1/4 teaspoon ground black pepper"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat oven to 350 F/ 175 C"
    },
    {
      "@type": "HowToStep",
      "text": "Peel and slice the potatoes into thin rounds."
    },
    {
      "@type": "HowToStep",
      "text": "Sauté the onions, garlic, salt and thyme with oil or broth until soft and browning. Abut 5 minutes. Set aside."
    },
    {
      "@type": "HowToStep",
      "text": "Make the sauce by putting all ingredients into a blender and blending until nice and smooth."
    }
  ],
