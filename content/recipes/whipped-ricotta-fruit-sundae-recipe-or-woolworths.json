  "recipeIngredient": [
    "400g ricotta",
    "0.75 cup cream",
    "2 tsp vanilla bean paste",
    "1 tsp cinnamon",
    "6 bananas",
    "1 punnet blueberries",
    "5ml maple syrup (a drizzle)",
    "1 punnet strawberries",
    "0.5 cup icing sugar"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "image": "https://foodhub.scene7.com/is/image/woolworthsltdprod/v0bafwgzcsxi79cr8gf4?wid=4032&hei=3024&fmt=png-alpha",
      "text": "Add the ricotta, cream, vanilla bean paste and cinnamon to a bowl."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "image": "https://foodhub.scene7.com/is/image/woolworthsltdprod/wxzlcw5xhepdvfyw7xoy?wid=4032&hei=3024&fmt=png-alpha",
      "text": "Sift the icing sugar into the bowl."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "image": "https://foodhub.scene7.com/is/image/woolworthsltdprod/p1wpphs4ecik5owxxzxq?wid=4032&hei=3024&fmt=png-alpha",
      "text": "Beat the ricotta mix using an electric mixer until smooth."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "image": "https://foodhub.scene7.com/is/image/woolworthsltdprod/jhzgt3d0ammacobgkwci?wid=4032&hei=3024&fmt=png-alpha",
      "text": "Peel and split a banana in half, spoon some ricotta mix over the top, poke in some berries and drizzle with maple syrup. Serve immediately."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "image": "https://foodhub.scene7.com/is/image/woolworthsltdprod/zu9xxxivugffglc106bg?wid=4032&hei=3024&fmt=png-alpha",
      "text": "This ricotta mix is absolutely divine and can be used for many desserts. It's equally delicious served on some warm banana bread topped with sliced bananas. My favourite breakfast! Enjoy!"
    }
  ],
