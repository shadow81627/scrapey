  "recipeIngredient": [
    "1 bunch fresh basil",
    "1/2 bunch fresh parsley",
    "1 bunch scallions",
    "1 medium avocado",
    "1 medium lemon",
    "1 cup extra-virgin olive oil",
    "1/2 cup plain Greek yogurt",
    "1/4 cup cold water",
    "2 cloves garlic",
