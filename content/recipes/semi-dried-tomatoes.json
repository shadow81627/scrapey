  "recipeIngredient": [
    "1 lb cherry tomatoes",
    "1 Tbsp extra virgin olive oil",
    "1 tsp dried herbs (I used basil and oregano)",
    "1/4 tsp sea salt"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat your oven to 300°F / 150°C. Line two large baking sheets with parchment paper."
    },
    {
      "@type": "HowToStep",
      "text": "Slice the tomatoes in half."
    },
    {
      "@type": "HowToStep",
      "text": "Place the tomatoes in a bowl with the olive oil, herbs, salt, and pepper. Toss to combine well."
    },
    {
      "@type": "HowToStep",
      "text": "Arrange the tomatoes cut-side up on the prepared baking sheets."
    },
    {
      "@type": "HowToStep",
      "text": "Bake for one hour, or until tomatoes have shrivelled and are just the tiniest bit brown around the edges."
    },
    {
      "@type": "HowToStep",
      "text": "Allow the semi-dried tomatoes to cool completely."
    }
  ],
