  "recipeIngredient": [
    "2 tsp olive oil",
    "350g kale, destalked, chopped",
    "500g mixed grains",
    "60g harissa paste",
    "1 medium red onion, peeled, diced",
    "300g smoked tofu",
    "80g pomegranate seeds",
    "3 tbs mint, fresh, chopped",
    "3 tbs coriander, fresh, chopped",
    "1 pinch cracked black pepper"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Drizzle olive oil in a large saucepan over a medium high heat and fry the kale until crispy, about 3 minutes, cooking in batches. Set aside."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Cook the mixed grains according to pack instructions, pour into a large bowl and fluff with a fork. Add the harissa and mix well."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Slice the tofu into batons and add to the gran mix along with the crispy kale and red onion, mixing well."
    },
    {
      "@type": "HowToStep",
      "HowToTip": {},
      "text": "Add the chopped herbs, pomegranate seeds and black pepper, mix and serve."
    }
  ],
