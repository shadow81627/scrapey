  "recipeIngredient": [
    "2 cups Macadamia milk or any other plant-based milk of your choice",
    "8 tbsp unsweetened cocoa powder (we used 2 types Droste and 365",
    "4 tbsp sugar",
    "2 tbsp corn starch",
    "1 tsp vanilla extract",
    "1 tsp cinnamon",
    "Pinch of cayenne pepper",
    "Optional toppings:",
    "Coconut whipped cream, we used cocowhip",
    "Organic chocolate syrup"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Combine all the ingredients (except toppings) in a medium saucepan and whisk well"
    },
    {
      "@type": "HowToStep",
      "text": "Place the saucepan on the stove over medium heat and cook for 5 minutes, whisking constantly until it starts to thicken."
    },
    {
      "@type": "HowToStep",
      "text": "Serve hot, topped with Cocowhip and chocolate syrup"
    }
