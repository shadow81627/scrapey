  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_845,h_703/k%2Farchive%2F0cb17d9fab869b771d3eca32c48d9809af2f15e7",
      "text": "Pop the hinge. Holding the oyster in your nondominant hand, wiggle your oyster knife into the hinge between the two shells. Twist the knife to pop the hinge."
    },
    {
      "@type": "HowToStep",
      "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_845,h_703/k%2Farchive%2F51a0b81ccc1bb77b1df9ae828ab0c88dd507a48c",
      "text": "Separate the shells. Slide the knife along the oyster to the top and twist the knife again to separate the top from the bottom."
    },
    {
      "@type": "HowToStep",
      "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_845,h_703/k%2Farchive%2Fdc82db985ca0eda2a271c3748fb1abb86f7d3c1f",
      "text": "Release the meat. Sweep the knife under the oyster to separate the meat from the shell."
    },
    {
      "@type": "HowToStep",
      "image": "https://cdn.apartmenttherapy.info/image/upload/f_auto,q_auto:eco,c_fill,g_auto,w_845,h_703/k%2Farchive%2F1335449ef9cfc2e1d0f9844a75c494c90717e656",
      "text": "Enjoy. Our preference? Shoot the oysters straight from the shell."
    }
  ],
