  "recipeIngredient": [
    "4 cups stale bread (cut into 1-inch pieces)",
    "1/2 cup chocolate chips",
    "4 eggs",
    "1 pinch salt",
    "1/4 cup butter (melted)",
    "1/2 cup white sugar (organic for vegan-friendly)",
    "1 tsp vanilla extract",
    "4 cups hot milk",
    "1/2 tsp nutmeg",
    "Garnish (Optional)",
    "Whipped Cream",
    "Fresh Berries"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat oven to 350Â°F."
    },
    {
      "@type": "HowToStep",
      "text": "Place the bread in a buttered 8 x 10 inch baking dish, or in individual ramequins."
    },
    {
      "@type": "HowToStep",
      "text": "Add the chocolate chips."
    },
    {
      "@type": "HowToStep",
      "text": "Whisk the eggs, then add salt, melted butter, sugar, and vanilla. Add warm milk gradually, to avoid cooking the eggs."
    },
    {
      "@type": "HowToStep",
      "text": "Pour egg mixture over the bread. Sprinkle with nutmeg to taste."
    },
    {
      "@type": "HowToStep",
      "text": "Bake until center is set, about 45 to 60 minutes."
    }
