  "recipeIngredient": [
    "2 cups tomato sauce",
    "2 cup veggie broth (, low sodium if needed)",
    "1 teaspoon apple cider vinegar",
    "1 1/2 teaspoon chili powder",
    "1 1/2 teaspoon smoked paprika",
    "1 1/2 teaspoon cumin",
    "1/2 teaspoon onion powder",
    "1/2 teaspoon garlic powder",
    "1 teaspoon sea salt",
    "1 tablespoon brown rice flour (, or regular flour if not concerned about gluten free)"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Place ingredients into a pot and whisk until combined. Place pot on stove top and bring to a simmer."
    },
    {
      "@type": "HowToStep",
      "text": "Simmer slowly until cooked down by 1/2 or until thickened to liking. Use for recipes, as a dip or as a drizzle over main dishes."
    }
