  "recipeIngredient": [
    "1 cup unsweetened almond milk",
    "2 medium ripe bananas",
    "2 tbsp all-natural peanut butter",
    "1 tbsp maple syrup",
    "1 1/4 cups old-fashioned oats",
    "Topping",
    "1/4 cup oats",
    "1 tbsp peanut butter",
    "2 tsp maple syrup",
    "1/4 tsp cinnamon"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Preheat oven to 350F. Line an 8x8 baking dish with parchment paper."
    },
    {
      "@type": "HowToStep",
      "text": "In a medium bowl mash one of the bananas with a fork, add almond milk, peanut butter, and maple syrup, and whisk until smooth. You can use a blender if you prefer."
    },
    {
      "@type": "HowToStep",
      "text": "Add the oats mix well and pour into the prepared 8x8 baking dish"
    },
    {
      "@type": "HowToStep",
      "text": "To prepare the topping, combine oats, coconut peanut butter, maple syrup, and cinnamon in a small bowl. Mix well using a fork or your fingers"
    },
    {
      "@type": "HowToStep",
      "text": "Slice the remaining banana into slices. Arrange banana slices over the oatmeal. Sprinkle topping and bake for 35 minutes."
    },
    {
      "@type": "HowToStep",
      "text": "Cut baked oatmeal into squares. Serve warm or re-heated"
    }
  ],
