  "recipeIngredient": [
    "1 large apple (grated (about 1 cup grated apple)",
    "1/2 cup rolled oats",
    "1 tablespoon chia seeds",
    "1/2 tsp ground cinnamon",
    "pinch of salt",
    "1/4 cup plain yoghurt",
    "3/4 cup unsweetened oat milk (or other milk of your choosing)"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Grate your apple using a box grater. The apple can be either peeled or unpeeled."
    },
    {
      "@type": "HowToStep",
      "text": "Combine grated apple, rolled oats, chia seeds, cinnamon, salt, yoghurt, and almond milk in a jar with a lid."
    },
    {
      "@type": "HowToStep",
      "text": "Stir to combine all ingredients well."
    },
    {
      "@type": "HowToStep",
      "text": "Set in the fridge to soak overnight."
    },
    {
      "@type": "HowToStep",
      "text": "Serve with fresh apple slices and a sprinkle of cinnamon in the morning."
    }
  ],
