  "recipeIngredient": [
    "2 cups old-fashioned rolled oats",
    "2 cups dairy milk or unsweetened non-dairy milk",
    "1 cup plain Greek or non-dairy yogurt",
    "3 tablespoons maple syrup or honey",
    "1 tablespoon chia seeds (optional)",
    "1/4 teaspoon ground cinnamon",
    "1/4 teaspoon kosher salt",
    "Optional toppings: fruits, nuts, seeds, nut butter"
  ],
  "recipeInstructions": [
    {
      "@type": "HowToStep",
      "text": "Add ingredients to a large bowl. Place all the ingredients in a large bowl."
    },
    {
      "@type": "HowToStep",
      "text": "Stir together. Stir together until well combined."
    },
    {
      "@type": "HowToStep",
      "text": "Cover and refrigerate overnight. You can divide the oats into individual jars at this point if desired. Cover and refrigerate for at least 4 hours, preferably overnight."
    },
    {
      "@type": "HowToStep",
      "text": "Stir before serving. Stir again before serving with desired toppings."
    }
  ],
